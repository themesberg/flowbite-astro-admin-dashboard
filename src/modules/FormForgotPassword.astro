---
import FlowbiteLogo from '../assets/flowbite-logo.svg?raw';

// Components
import LogoHeader from '../components/LogoHeader.astro';
import TextInput from '../components/TextInput.astro';
---

<div
	class="w-full flex flex-col items-center justify-center px-6 pt-8 mx-auto pt:mt-0 dark:bg-gray-900"
>
	<!-- Card -->
	<div
		class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800"
	>
		<div class="w-full p-6 sm:p-8">
			<div class="flex flex-col items-center justify-center text-2xl font-semibold dark:text-white">
				<div set:html={FlowbiteLogo} class="" />
			</div>
			<h2 class="text-2xl font-bold text-gray-900 mb-4 dark:text-white">
				Password got you puzzled? ðŸ§©ðŸ’­
			</h2>
			<LogoHeader text="Dive into the Dashboard Dreamscape ðŸŒŠðŸš€" description="Don't fret! Just type in your email and we will send you a code to reset your password!" />
			
			<form class="mt-8 space-y-6" action="#">
				<TextInput label="Your email" type="email" name="email" id="email" placeholder="name@company.com" isRequired={true} />
				<div class="flex items-start">
					<div class="flex items-center h-5">
						<input
							id="remember"
							aria-describedby="remember"
							name="remember"
							type="checkbox"
							class="w-4 h-4 border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:focus:ring-primary-600 dark:ring-offset-gray-800 dark:bg-gray-700 dark:border-gray-600"
							required
						/>
					</div>
					<div class="ml-3 text-sm">
						<label
							for="remember"
							class="font-medium text-gray-900 dark:text-white"
							>I accept the <a
								href="#"
								class="text-primary-700 hover:underline dark:text-primary-500"
								>Terms and Conditions</a
							></label
						>
					</div>
				</div>
				<button
					type="submit"
					class="w-full px-5 py-3 text-base font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
					>Reset password</button
				>
			</form>
		</div>
	</div>
</div>
